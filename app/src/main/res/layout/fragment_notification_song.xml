<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
      <variable
          name="viewModel"
          type="com.example.mymusicapplication.screens.bottom_sheet.NowPlayingViewModel" />
    </data>

        <RelativeLayout
            android:id="@+id/relativeNotifi"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/seek_bar"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp">

                <ImageView
                    style="@style/ImageButton"
                    android:src="@drawable/ic_pree"
                    android:onClick="@{()->viewModel.onPrevBtnClick()}"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    style="@style/ImageButton"
                    android:src="@{viewModel.isPlaying?@drawable/ic_play:@drawable/ic_pause}"
                    android:onClick="@{()->viewModel.onPauseResumeClick()}"/>

                <ImageView
                    style="@style/ImageButton"
                    android:src="@drawable/ic_next"
                    android:onClick="@{()->viewModel.onNextBtnClick()}"/>
            </LinearLayout>
        </RelativeLayout>
</layout>
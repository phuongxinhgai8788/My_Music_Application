<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="recentlyPlayed"
            type="com.example.mymusicapplication.screens.home.recently_played.RecentlyPlayed" />
    </data>

    <RelativeLayout
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="@dimen/_7sdp"
            android:scaleType="fitXY"
            android:id="@+id/imgVideo"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_video"
            android:layout_centerVertical="true"
            android:background="@color/h181B2C"
            />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/TextNormal"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_alignTop="@+id/imgVideo"
            android:layout_toEndOf="@+id/imgVideo"
            android:text="@{recentlyPlayed.name}" />

        <TextView
            android:id="@+id/txtDescription"
            style="@style/TextMedium"
            android:text="@{recentlyPlayed.artist}"
            android:textColor="@color/h585A66"
            android:layout_toEndOf="@+id/imgVideo"
            android:layout_below="@+id/txtTitle"
            android:layout_marginLeft="@dimen/_20sdp"
            />
        <View
            style="@style/BgLine"
            android:layout_alignLeft="@+id/txtDescription"
            android:layout_below="@+id/txtDescription"
            android:layout_marginTop="@dimen/_10sdp"/>

    </RelativeLayout>
</layout>
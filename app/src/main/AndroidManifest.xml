<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymusicapplication">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/avatar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/avatar_round"
        android:supportsRtl="true"
        android:name=".manager.MyApplication"
        android:theme="@style/Theme.MyMusicApplication">
        <activity
            android:name=".manager.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".sender_receiver_service.LocalBroadcastReceiver"/>
        <service android:name=".sender_receiver_service.MusicService"/>
    </application>
</manifest>